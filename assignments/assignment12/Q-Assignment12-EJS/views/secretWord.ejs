<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Secret Word Demo</h5>
        <p class="card-text">The secret word is: <strong><%= secretWord %></strong></p>
        <p class="card-text">Would you like to change it?</p>
        
        <form method="POST" class="mt-3">
          <div class="mb-3">
            <label for="secretWord" class="form-label">New Secret Word:</label>
            <input name="secretWord" id="secretWord" class="form-control" required />
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>